---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Jack Derksen">
  <div class="home-content">
    <h1 class="name">Jack Derksen</h1>
    <p class="quote">"Your inspirational quote here"</p>
  </div>
</BaseLayout>

<style>
  .home-content {
    text-align: center;
  }

  .name {
    font-size: 3rem;
    margin-bottom: 1rem;
    color: var(--text-primary);
  }

  .quote {
    font-size: 1.2rem;
    color: var(--accent-primary);
    font-style: italic;
  }
</style>
